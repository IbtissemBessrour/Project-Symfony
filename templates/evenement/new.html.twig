{% block title %}New Evenement{% endblock %}

{% block body %}
    <h1>Create new Evenement</h1>
{{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }} 
        <div class="form-group">
            {{ form_label(form.nomEvenement, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.nomEvenement, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nomEvenement, {'attr': {'class': 'text-danger'}}) }}
            </div>
         </div>
        <div class="form-group">
            {{ form_label(form.typeEvenement, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.typeEvenement, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.typeEvenement, {'attr': {'class': 'text-danger'}}) }}
            </div>
         </div>
        <div class="form-group">
            {{ form_label(form.dateEvenement, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.dateEvenement, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateEvenement, {'attr': {'class': 'text-danger'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('app_evenement_index') }}">back to list</a>
{% endblock %}