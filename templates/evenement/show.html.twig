{# templates/evenement/show.html.twig #}

{% block title %}{{ evenement.nomEvenement }}{% endblock %}

{% block body %}
    <h1>{{ evenement.nomEvenement }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom Evenement</th>
                <td>{{ evenement.nomEvenement }}</td>
            </tr>
            <tr>
                <th>Type Evenement</th>
                <td>{{ evenement.typeEvenement }}</td>
            </tr>
            <tr>
                <th>Date Evenement</th>
                <td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('Y-m-d') : 'N/A' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_evenement_index') }}">Back to list</a>
    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">Edit</a>

    {{ include('evenement/_delete_form.html.twig') }}
{% endblock %}