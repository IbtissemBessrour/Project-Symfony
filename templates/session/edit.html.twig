{% extends 'base.html.twig' %}

{% block title %}Edit Session{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <h1>Edit Session</h1>

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }} 
        <div class="form-group">
            {{ form_label(form.dateDebue, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.dateDebue, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateDebue, {'attr': {'class': 'text-danger'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.dateFine, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.dateFine, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateFine, {'attr': {'class': 'text-danger'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.nomFormation, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.nomFormation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nomFormation, {'attr': {'class': 'text-danger'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">{{ button_label|default('Update') }}</button>
            </div>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('app_Session') }}" class="btn btn-secondary">Back to list</a>
{% endblock %}
