{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <h1>{{ quiz.title }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ quiz.title }}</td>
            </tr>
            <tr>
                <th>PassingScore</th>
                <td>{{ quiz.passingScore }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Questions</h3>
    <ul class="list-group">
        {% for question in questions %}
            <li class="list-group-item">
                <strong>{{ question.question }}</strong>
                <ul>
                    {% for choice in question.choices %}
                        <li>{{ choice }}</li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('app_quiz_index') }}" class="btn btn-secondary mt-3">Back to List</a>
    <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-warning mt-3">Edit</a>

    {{ include('quiz/_delete_form.html.twig') }}
{% endblock %}