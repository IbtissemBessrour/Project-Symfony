{% extends 'base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>Reclamation index</h1>
    <h1>le Nomber de Evenement {{totalReclamations}}</h1>
<!-- Formulaire de recherche avec carte -->
<div class="card mb-4">
        <div class="card-header">
            Recherche
        </div>
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" name="searchNom" value="{{ searchNom }}" class="form-control" placeholder="Nom de formation" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mt-3 btn-lg">Rechercher</button>
            </form>
        </div>
</div>
<!-- End Formulaire de recherche avec carte -->
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Utilisateur</th>
                <th>Description</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.utilisateur }}</td>
                <td>{{ reclamation.description }}</td>
                <td>{{ reclamation.statut }}</td>
                <td>
                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}">show</a>
                    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_new') }}">Create new</a>
{% endblock %}
