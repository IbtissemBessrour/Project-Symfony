{% extends 'base.html.twig' %}
{% block title %}Edit Formation{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <h1>Edit Formation</h1>
<!-- End Formulaire de recherche avec carte -->

    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }} 
   
        <div class="form-group">
            {{ form_label(form.nomFormation, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.nomFormation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nomFormation, {'attr': {'class': 'text-danger'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.discription, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.discription, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.discription, {'attr': {'class': 'text-danger'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.nombrePlaces, null, {'label_attr': {'class': 'control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.nombrePlaces, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nombrePlaces, {'attr': {'class': 'text-danger'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">{{ button_label|default('Update') }}</button>
            </div>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('app_four') }}" class="btn btn-secondary">Back to list</a>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}
