{% extends 'base.html.twig' %}
{% block stylesheets %}
 <link rel="stylesheet" href="{{asset('asset/css/style.css')}}">
{% endblock %}
{% block body %}
 <!-- =============== Navigation ================ -->
    <div class="containert">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon">
                                <ion-icon name="logo-apple"></ion-icon>
                        </span>
                        <span class="title">
                    
                            Hello Guest
                        </span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('app_four') }}">
                        <span class="icon">
                            <ion-icon name="home-outline"></ion-icon>
                        </span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('app_formation_new') }}">
                        <span class="icon">
                            <ion-icon name="people-outline"></ion-icon>
                        </span>
                        <span class="title">Create new Formation</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('app_Session') }}">
                        <span class="icon">
                            <ion-icon name="chatbubble-outline"></ion-icon>
                        </span>
                        <span class="title">Session</span>
                    </a>
                </li>

                <li>
                    <a href="{{ path('app_session_new') }}">
                        <span class="icon">
                            <ion-icon name="help-outline"></ion-icon>
                        </span>
                        <span class="title">Create new Session</span>
                    </a>
                </li>

                <li>
                    <a href="{{path('app_quiz')}}">
                        <span class="icon">
                            <ion-icon name="settings-outline"></ion-icon>
                        </span>
                        <span class="title">Quiz</span>
                    </a>
                </li>

                <li>
                    <a href="#">
                        <span class="icon">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                        </span>
                        <span class="title">Password</span>
                    </a>
                </li>

                <li>
                    <a href="{{path('app_index')}}">
                        <span class="icon">
                            <ion-icon name="log-out-outline"></ion-icon>
                        </span>
                        <span class="title">Sign Out</span>
                    </a>
                </li>
            </ul>
        </div>
       <!-- ========================= Main ==================== -->
        <div class="main">
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>

                <div class="search">
                 <form method="get" action="{{ path('app_session_index') }}">
                    <label>
                        <input type="text" name="searchNom" value="{{ searchNom }}" class="form-control" placeholder="Nom de formation">
                            <button type="submit" class="custom-button">
                                <ion-icon name="search-outline"></ion-icon>
                            </button>
                    </label>
                </div>
                </form>
                <div class="user">
                    <img src="{{asset('asset/imgs/customer01.jpg')}}" alt="">
                </div>
            </div>
           <!-- ======================= Cards ================== -->
            <div class="cardBox">
                <div class="card">
                    <div>
                        <div class="numbers">{{ totalPlaces }}</div>
                        <div class="cardName">nombre total de palce</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="eye-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">{{totalSession}}</div>
                        <div class="cardName">Nomber de Session</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="cart-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">{{totalformation}}</div>
                        <div class="cardName">Nombre De Formation</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="chatbubbles-outline"></ion-icon>
                    </div>
                </div>

                <div class="card">
                    <div>
                        <div class="numbers">{{sessions_today}}</div>
                        <div class="cardName">Nembre Session Ajourd'hui</div>
                    </div>

                    <div class="iconBx">
                        <ion-icon name="cash-outline"></ion-icon>
                    </div>
                </div>
            </div>
   <!--==================================New===============================-->
       <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Passing Score</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for quiz in quizzes %}
                <tr>
                    <td>{{ quiz.id }}</td>
                    <td>{{ quiz.title }}</td>
                    <td>{{ quiz.passingScore }}</td>
                    <td>
                        <a href="{{ path('app_quiz_show', {'id': quiz.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded back-to-top"><i class="bi bi-arrow-up"></i></a>
{% endblock %}
{% block javascripts %}
 <!-- =========== Scripts =========  -->
    <script src="{{asset('asset/js/main.js')}}"></script>
   
    <!-- ====== ionicons ======= -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
{% endblock %}